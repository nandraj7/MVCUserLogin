@model AddViewModel

<html>
<head>
    <title></title>
</head>
<body>
    <form class="form-horizontal" asp-controller="Account" asp-action="Add" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email" asp-for="Name">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="Enter Name" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email" asp-for="Email">Email:</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" placeholder="Enter email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email" asp-for="Age">Age:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="email" placeholder="Enter Age" asp-for="Age">
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email" asp-for="MobileNumber">Mobile Number:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="Enter Mobile Number" asp-for="MobileNumber">
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email" asp-for="Password">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="email" placeholder="Enter Password" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email" asp-for="ConfirmPassword">Confirm Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="email" placeholder="ConfirmPassword" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div></br>

        <a class="btn btn-primary" asp-controller="Account" asp-action="Add" method="get">Reset</a>
    </form>
</body>
</html>